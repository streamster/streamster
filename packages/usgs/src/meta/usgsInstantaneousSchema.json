{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Instantaneous",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "declaredType": { "type": "string" },
    "scope": { "type": "string" },
    "value": {
      "type": "object",
      "properties": {
        "queryInfo": {
          "type": "object",
          "properties": {
            "queryURL": { "type": "string" },
            "criteria": {
              "type": "object",
              "properties": {
                "locationParam": { "type": "string" },
                "variableParam": { "type": "string" },
                "parameter": { "type": "array", "items": {} }
              }
            },
            "note": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "value": { "type": "string" },
                  "title": { "type": "string" }
                },
                "required": ["value", "title"]
              }
            }
          }
        },
        "timeSeries": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "sourceInfo": {
                "type": "object",
                "properties": {
                  "siteName": { "type": "string" },
                  "siteCode": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "value": { "type": "string" },
                        "network": { "type": "string" },
                        "agencyCode": { "type": "string" }
                      }
                    }
                  },
                  "timeZoneInfo": {
                    "type": "object",
                    "properties": {
                      "defaultTimeZone": {
                        "type": "object",
                        "properties": {
                          "zoneOffset": { "type": "string" },
                          "zoneAbbreviation": { "type": "string" }
                        }
                      },
                      "daylightSavingsTimeZone": {
                        "type": "object",
                        "properties": {
                          "zoneOffset": { "type": "string" },
                          "zoneAbbreviation": { "type": "string" }
                        }
                      },
                      "siteUsesDaylightSavingsTime": { "type": "boolean" }
                    }
                  },
                  "geoLocation": {
                    "type": "object",
                    "properties": {
                      "geogLocation": {
                        "type": "object",
                        "properties": {
                          "srs": { "type": "string" },
                          "latitude": { "type": "number" },
                          "longitude": { "type": "number" }
                        }
                      },
                      "localSiteXY": { "type": "array", "items": {} }
                    }
                  },
                  "note": { "type": "array", "items": {} },
                  "siteType": { "type": "array", "items": {} },
                  "siteProperty": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "value": { "type": "string" },
                        "name": { "type": "string" }
                      },
                      "required": ["value", "name"]
                    }
                  }
                }
              },
              "variable": {
                "type": "object",
                "properties": {
                  "variableCode": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "value": { "type": "string" },
                        "network": { "type": "string" },
                        "vocabulary": { "type": "string" },
                        "variableID": { "type": "number" },
                        "default": { "type": "boolean" }
                      }
                    }
                  },
                  "variableName": { "type": "string" },
                  "variableDescription": { "type": "string" },
                  "valueType": { "type": "string" },
                  "unit": {
                    "type": "object",
                    "properties": { "unitCode": { "type": "string" } }
                  },
                  "options": {
                    "type": "object",
                    "properties": {
                      "option": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "name": { "type": "string" },
                            "optionCode": { "type": "string" }
                          }
                        }
                      }
                    }
                  },
                  "note": { "type": "array", "items": {} },
                  "noDataValue": { "type": "number" },
                  "variableProperty": { "type": "array", "items": {} },
                  "oid": { "type": "string" }
                }
              },
              "values": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "value": { "type": "string" },
                          "qualifiers": {
                            "type": "array",
                            "items": { "type": "string" }
                          },
                          "dateTime": { "type": "string" }
                        }
                      }
                    },
                    "qualifier": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "qualifierCode": { "type": "string" },
                          "qualifierDescription": { "type": "string" },
                          "qualifierID": { "type": "number" },
                          "network": { "type": "string" },
                          "vocabulary": { "type": "string" }
                        }
                      }
                    },
                    "qualityControlLevel": { "type": "array", "items": {} },
                    "method": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "methodDescription": { "type": "string" },
                          "methodID": { "type": "number" }
                        }
                      }
                    },
                    "source": { "type": "array", "items": {} },
                    "offset": { "type": "array", "items": {} },
                    "sample": { "type": "array", "items": {} },
                    "censorCode": { "type": "array", "items": {} }
                  }
                }
              },
              "name": { "type": "string" }
            }
          }
        }
      }
    },
    "nil": { "type": "boolean" },
    "globalScope": { "type": "boolean" },
    "typeSubstituted": { "type": "boolean" }
  }
}
